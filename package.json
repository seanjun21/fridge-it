{
  "name": "fridge-it",
  "version": "1.0.0",
  "description": "",
  "main": "src/js/index.jsx",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "mkdir": "mkdir -p build",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:js && npm run build:css",
    "watch": "npm run watch:html & npm run watch:js & npm run watch:css",
    "clean": "rm -rf build",
    "build:html": "npm run clean:html && cp src/index.html build/",
    "watch:html": "npm run build:html && chokidar index.html -c 'npm run build:html'",
    "clean:html": "rm -f build/index.html",
    "build:css": "npm run clean:css && lessc --source-map src/css/style.less build/$npm_package_name.$npm_package_version.css",
    "watch:css": "npm run build:css && chokidar 'src/css/**/*.less' -c 'npm run build:css'",
    "clean:css": "rm -f build/$npm_package_name.$npm_package_version.css build/$npm_package_name.$npm_package_version.css.map",
    "build:js": "npm run clean:js && webpack",
    "watch:js": "npm run build:js && webpack --watch",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seanjun21/fridge-it.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/seanjun21/fridge-it/issues"
  },
  "homepage": "https://github.com/seanjun21/fridge-it#readme",
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "chokidar-cli": "^1.2.0",
    "less": "^2.7.1",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.16.4",
    "mongoose": "^4.6.3",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  }
}
